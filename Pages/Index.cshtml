@page "/Racers"
@model MyBarrelRacers.Pages.IndexModel

    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- Search Form -->
<form method="get">
    <p>
        Search by Name:
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" style="width:250px; display:inline;" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Racer[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Racer[0].Home)</th>
            <th>@Html.DisplayNameFor(model => model.Racer[0].Score)</th>
            <th>@Html.DisplayNameFor(model => model.Racer[0].HorseName)</th>
            <th>@Html.DisplayNameFor(model => model.Racer[0].CompetitionDate)</th>
            <th>@Html.DisplayNameFor(model => model.Racer[0].EventLocation)</th>
            <th>@Html.DisplayNameFor(model => model.Racer[0].Qualified)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Racer)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Home)</td>
                <td>@Html.DisplayFor(modelItem => item.Score)</td>
                <td>@Html.DisplayFor(modelItem => item.HorseName)</td>
                <td>@item.CompetitionDate.ToShortDateString()</td>
                <td>@Html.DisplayFor(modelItem => item.EventLocation)</td>
                <td>@Html.DisplayFor(modelItem => item.Qualified)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Number">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Number">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Number">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
